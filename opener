<body>
  <div class="container">
    <h1>Private URL Launcher</h1>
    <form id="launchForm">
      <input type="text" id="urlInput" placeholder="Enter URL (example.com)" required>
      <br>
      <button type="submit">Go</button>
    </form>
  </div>

  <script>
    document.getElementById("launchForm").addEventListener("submit", function(e) {
      e.preventDefault();
      let url = document.getElementById("urlInput").value.trim();
      if (!/^https?:\/\//i.test(url)) {
        url = "https://" + url;
      }
      window.location.href = url; // full page redirect
    });
  </script>
